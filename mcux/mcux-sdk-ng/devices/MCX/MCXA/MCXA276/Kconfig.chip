# device related

config MCUX_HW_DEVICE_ID_MCXA276
    bool

choice
    prompt "Device MCXA276 Part"
    config MCUX_HW_DEVICE_PART_MCXA276VLQ
    bool "Device part MCXA276VLQ"
    select MCUX_HW_DEVICE_ID_MCXA276
    config MCUX_HW_DEVICE_PART_MCXA276VLL
    bool "Device part MCXA276VLL"
    select MCUX_HW_DEVICE_ID_MCXA276
    config MCUX_HW_DEVICE_PART_MCXA276VLH
    bool "Device part MCXA276VLH"
    select MCUX_HW_DEVICE_ID_MCXA276
    config MCUX_HW_DEVICE_PART_MCXA276VPN
    bool "Device part MCXA276VPN"
    select MCUX_HW_DEVICE_ID_MCXA276
endchoice

config MCUX_HW_DEVICE_ID
