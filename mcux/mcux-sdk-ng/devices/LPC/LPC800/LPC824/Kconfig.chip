    default "LPC824M201JHI33" if MCUX_HW_DEVICE_PART_LPC824M201JHI33
    default "LPC824M201JDH20" if MCUX_HW_DEVICE_PART_LPC824M201JDH20

config MCUX_TOOLCHAIN_JLINK_CPU_IDENTIFIER
