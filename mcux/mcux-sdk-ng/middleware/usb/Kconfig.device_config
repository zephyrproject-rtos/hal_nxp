menu "Device Configurations(usb_device_config.h)"

comment "USB Hardware Configurations"

config USB_DEVICE_CONFIG_KHCI
    int "KHCI Controller Instance Count" if MCUX_HW_IP_DriverType_USB_HOST_DEVICE_KHCI || MCUX_HW_IP_DriverType_USB_DEVICE_KHCI
    default 1 if (MCUX_HW_IP_DriverType_USB_HOST_DEVICE_KHCI || MCUX_HW_IP_DriverType_USB_DEVICE_KHCI) && (USB_DEVICE_CONFIG_EHCI = 0)
    default 0
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_KHCI_DMA_ALIGN_BUFFER_LENGTH
    int "KHCI Controller DMA Buffer Alignment Length" if USB_DEVICE_CONFIG_KHCI > 0
    default 64
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_EHCI
    int "EHCI Controller Instance Count" if MCUX_HW_IP_DriverType_USB_HOST_DEVICE_EHCI
    default 1 if MCUX_HW_IP_DriverType_USB_HOST_DEVICE_EHCI
    default 0
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_EHCI_MAX_DTD
    int "Maximum number of DTDs supported by the EHCI Controller" if USB_DEVICE_CONFIG_EHCI > 0
    default 16
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_EHCI_TEST_MODE
    bool "Enable Test Mode for EHCI Controller" if USB_DEVICE_CONFIG_EHCI > 0
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_EHCI_ID_PIN_DETECT
    bool "Enable ID Pin Detection for EHCI Controller" if USB_DEVICE_CONFIG_EHCI > 0
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_LPCIP3511FS
    int "LPC IP3511 FS Controller Instance Count" if MCUX_HW_IP_DriverType_USB_DEVICE_IP3511FS
    default 1 if MCUX_HW_IP_DriverType_USB_DEVICE_IP3511FS && (USB_DEVICE_CONFIG_LPCIP3511HS = 0)
    default 0
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_LPCIP3511HS
    int "LPC IP3511 HS Controller Instance Count" if MCUX_HW_IP_DriverType_USB_DEVICE_IP3511HS
    default 1 if MCUX_HW_IP_DriverType_USB_DEVICE_IP3511HS && (USB_DEVICE_CONFIG_EHCI = 0)
    default 0
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_NUM
    string
    default "(USB_DEVICE_CONFIG_KHCI + USB_DEVICE_CONFIG_EHCI + USB_DEVICE_CONFIG_LPCIP3511FS + USB_DEVICE_CONFIG_LPCIP3511HS)"
    help
        Total number of Device Controller instances
        No prefix in generated macro

config USB_DEVICE_CONFIG_CHARGER_DETECT
    bool "Enable Charger Detection" if MCUX_HW_IP_DriverType_USB_PHYDCD || MCUX_HW_IP_DriverType_USB_HSDCD
    help
        No prefix in generated macro

comment "USB Class Configurations"

config USB_DEVICE_CONFIG_AUDIO
    int "Audio Class Instance Count"
    default 0
    help
        No prefix in generated macro

if USB_DEVICE_CONFIG_AUDIO > 0

    config USB_DEVICE_CONFIG_AUDIO_CLASS_2_0
        bool "Enable support for Audio Class 2.0"
        default y
        help
            No prefix in generated macro

endif

config USB_DEVICE_CONFIG_CDC_ACM
