config USB_DEVICE_CONFIG_SELF_POWER
    bool "Enable self-powered power supply"
    default y
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_ENDPOINTS
    int "Number of endpoints used in Device Controller"
    default 4
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_GET_SOF_COUNT
    bool "Enable Get USB SOF Count"
    help
        No prefix in generated macro

