    bool "Enable ROOT2 Test"
    default y
    help
        ROOT2 is only tested on RT600
        No prefix in generated macro

config USB_DEVICE_CONFIG_KEEP_ALIVE_MODE
    bool "Enable Keep Alive Mode"
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_USB20_TEST_MODE
    bool "Enable USB 2.0 Test Mode"
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_CV_TEST
    bool "Enable CV Test"
    help
        No prefix in generated macro

config USB_DEVICE_CONFIG_COMPLIANCE_TEST
    bool "Enable Compliance Test"
    select USB_DEVICE_CONFIG_USB20_TEST_MODE
    select USB_DEVICE_CONFIG_CV_TEST
    help
        No prefix in generated macro

