    config USB_DEVICE_CONFIG_LPM_L1
        bool "Enable LPM(L1) Support"
        help
            No prefix in generated macro
endif

config USB_DEVICE_CONFIG_REMOTE_WAKEUP
    bool "Enable Remote Wake-Up Support"
    help
        No prefix in generated macro

