config MCUX_HAS_COMPONENT_driver.hostif
    bool
    default y if MCUX_HW_IP_DriverType_HOSTIF

config MCUX_COMPONENT_driver.hostif
    bool "hostif"
    select MCUX_COMPONENT_driver.common
    depends on MCUX_HAS_COMPONENT_driver.hostif
