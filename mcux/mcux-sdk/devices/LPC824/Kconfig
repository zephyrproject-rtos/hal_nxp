    select MCUX_HAS_utility_debug_console_lite

#### SOC specific dependency ####
config MCUX_USE_component_lpc_gpio_adapter
    bool
    select MCUX_USE_driver_syscon

config MCUX_USE_driver_flexcomm_i2c_dma
    bool
    select MCUX_USE_driver_lpc_dma

config MCUX_USE_driver_flexcomm_usart_dma
    bool
    select MCUX_USE_driver_lpc_dma

config MCUX_USE_utility_assert_lite
    bool
    select MCUX_USE_component_miniusart_adapter

config MCUX_USE_utility_debug_console_lite
    bool
    select MCUX_USE_component_miniusart_adapter


#### SOC level drivers ####
# device_LPC824_CMSIS
config MCUX_USE_device_LPC824_CMSIS
    bool "Device LPC824_cmsis"
    select MCUX_USE_CMSIS_Include_core_cm
    help
      Device LPC824_cmsis

# device_LPC824_startup
config MCUX_USE_device_LPC824_startup
    bool "Device LPC824_startup"
    help
      Device LPC824_startup

# device_LPC824_system
config MCUX_USE_device_LPC824_system
    bool "Device LPC824_system"
    help
      Device LPC824_system

rsource "drivers/Kconfig"

endif # MCUX_USE_SOC_LPC824