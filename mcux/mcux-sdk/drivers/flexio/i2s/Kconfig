# driver_flexio_i2s_dma
config MCUX_HAS_driver_flexio_i2s_dma
    bool

config MCUX_USE_driver_flexio_i2s_dma
    depends on MCUX_HAS_driver_flexio_i2s_dma
    bool "FLEXIO I2S DMA Driver"
    select MCUX_USE_driver_flexio_i2s
    help
      FLEXIO I2S DMA Driver

# driver_flexio_i2s
config MCUX_HAS_driver_flexio_i2s
    bool

config MCUX_USE_driver_flexio_i2s
    depends on MCUX_HAS_driver_flexio_i2s
    bool "FLEXIO I2S Driver"
    select MCUX_USE_driver_flexio
    help
      FLEXIO I2S Driver

# driver_flexio_i2s_edma
config MCUX_HAS_driver_flexio_i2s_edma
    bool

config MCUX_USE_driver_flexio_i2s_edma
    depends on MCUX_HAS_driver_flexio_i2s_edma
    bool "FLEXIO I2S EDMA Driver"
    select MCUX_USE_driver_flexio_i2s
    help
      FLEXIO I2S EDMA Driver
