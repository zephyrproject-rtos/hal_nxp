# driver_mipi_csi2rx
config MCUX_HAS_driver_mipi_csi2rx
    bool

config MCUX_USE_driver_mipi_csi2rx
    depends on MCUX_HAS_driver_mipi_csi2rx
    bool "MIPI CSI2RX Driver"
    select MCUX_USE_driver_common
    select MCUX_USE_driver_soc_mipi_csi2rx
    help
      MIPI CSI2RX Driver
